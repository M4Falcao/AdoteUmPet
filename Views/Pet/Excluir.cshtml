@model AdoteUmPet.Models.Pet

@{
    ViewData["Title"] = "Excluir";
}

<div class="text-center">
    <h3>Deseja realmente excluir @Model.Nome ?</h3> 
</div>
<hr />
<div class="row align-items-center">
    <a role="button" class="btn btn-primary" style="margin:5px" asp-controller="Pet" asp-action="Administracao">Voltar</a>
    <a role="button" class="btn btn-danger" style="margin:5px" asp-controller="Pet" asp-action="Deletar" asp-route-id="@Model.Id">Excluir</a>
</div>