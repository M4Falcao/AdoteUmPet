@model IEnumerable<AdoteUmPet.Models.Pet>

@{
    ViewData["Title"] = "Administração";
}

<h1>Administração</h1>

<p>
    <a role="button" class="btn btn-primary" asp-controller="Pet" asp-action="Cadastro">Criar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        <a role="button" class="btn btn-primary" asp-controller="Pet" asp-action="Atualizar" asp-route-id="@item.Id">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Pet" asp-action="Excluir" asp-route-id="@item.Id">Apagar</a>
                    </td>
                </tr>
            }
        }
        
    </tbody>
</table>
